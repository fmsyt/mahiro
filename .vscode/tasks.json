{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"path": "client",
			"problemMatcher": [],
			"label": "Start Client",
		},
		{
			"label": "Start Server",
			"command": "${config:python.pythonPath}",
			"args": [ "uvcorn", "main:app", "--reload" ]
		},
		{
			"type": "npm",
			"script": "build",
			"path": "client",
			"label": "Build Client",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
