{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"path": "client",
			"problemMatcher": [],
			"label": "Start Client",
		},
		{
			"label": "Start Server",
			"windows": {
				"command": "${workspaceFolder}\\venv\\Scripts\\python.exe",
			},
			"linux": {
				"command": "${workspaceFolder}/venv/bin/python",
			},
			"args": ["main.py"]
		},
		{
			"type": "npm",
			"script": "build",
			"path": "client",
			"label": "Build Client",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
