{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "dev",
			"path": "client",
			"problemMatcher": [],
			"label": "Start Client on Web",
		},
		{
			"type": "npm",
			"script": "tauri:dev",
			"path": "client",
			"problemMatcher": [],
			"label": "Start Client on Application",
		},
		{
			"label": "Start Server",
			"windows": {
				"command": "${workspaceFolder}\\venv\\Scripts\\python.exe",
			},
			"linux": {
				"command": "${workspaceFolder}/venv/bin/python",
			},
			"args": ["server.py"]
		},
		{
			"type": "npm",
			"script": "build",
			"path": "client",
			"label": "Build Client",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
      "label": "ui:dev",
      "type": "shell",
      "isBackground": true,
      "command": "npm",
      "args": [
				"run",
				"tauri:dev",
				"--prefix",
				"${workspaceFolder}/client"
			],
			"problemMatcher": []
    },
    {
      "label": "ui:build",
      "type": "shell",
      "command": "npm",
      "args": [
				"run",
				"tauri:build",
				"--prefix",
				"${workspaceFolder}/client"
			],
			"problemMatcher": []
    }
	]
}
