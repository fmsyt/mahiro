{
  "build": {
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:tauri",
    "devPath": "http://localhost:1421",
    "distDir": "../tauri.dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mahiro",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPLOCALDATA/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mahiro.com.yotta-rc.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "mahiro",
        "width": 800,
        "height": 600,
        "url": "tauri.html"
      },
      {
        "label": "config",
        "fullscreen": false,
        "resizable": true,
        "title": "Config - mahiro",
        "width": 800,
        "height": 600,
        "url": "config.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
