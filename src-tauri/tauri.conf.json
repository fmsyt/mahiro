{
  "build": {
    "beforeDevCommand": "npm run tauri:dev:ui",
    "beforeBuildCommand": "npm run tauri:build:ui",
    "devPath": "http://localhost:1421",
    "distDir": "../tauri.dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mahiro",
    "version": "0.9.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPLOCALDATA/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mahiro.yotta-rc.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": ["en-US", "ja-JP"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "mahiro",
        "width": 800,
        "height": 600,
        "url": "tauri.html",
        "visible": false
      },
      {
        "label": "config",
        "fullscreen": false,
        "resizable": true,
        "title": "Config - mahiro",
        "width": 800,
        "height": 600,
        "url": "config.html",
        "visible": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
